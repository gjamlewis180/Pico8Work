__lua__
function _init()
    x=0
    y=0
    direction=1
end
   
function _update()
    x+=direction
    y+=direction
    if (y<0 or y>127 ) then
        direction*= -1
    end
    


end
   
function _draw()
    cls()
    line(0,y,127,y,7)
    line(x,0,x,127,7)
end
