pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

function _init()
	cls()
	counter = 0 
end


function _update()
	counter += 1
	if counter == 100 then
	cls()
	counter = 0
	end
end

function nextrand( low, high )
	range = high - low
	r = flr( rnd( range ) )
	r = r + low 
	return r 
end 	

function _draw()
	x0 = nextrand(0,128)
	y0 = nextrand(0,128)
	x1 = nextrand(0,128)
	y1 = nextrand(0,128)
	
	c = nextrand(1,15)
	color(c)
	line(x0, y0, x1, y1)
end
	
	
