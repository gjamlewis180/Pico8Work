pico-8 cartridge // http://www.pico-8.com
version 33
__lua__
#include cannons.lua

function _init()
    cannon=newCannon(0,127,6,20)
    cannon.rotation=90
end

function _update()
    if btnp(0) then 
        cannon.rotation+=15
        tX,tY=rotatePtOnCannon(cannon.x0,cannon.y0,cannon.originX,cannon.originY,cannon.rotation)
        printh("rx:"..tX.."ry:"..tY)
        setCannonPoints(cannon,tX,tY)
    elseif btnp(1) then
        cannon.rotation-=15
    end
end

function _draw()
    cls()

    cannon.Draw(cannon)
    
end


