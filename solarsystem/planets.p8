__lua__

#include alarms.lua
function _init()
    
    degrees = 0
    sun={sprite=1, x=55, y=55}
    earth={sprite=3, x=75,y=75}
    moon={sprite=4, x=0,y=0}
    run=0
    run1=0
end

function _update60()
    
    run+=1
    
    if (run==15) then
        rotate(sun.x,sun.y,30,earth)
        
        run=0
    end

    if (btn(1)) then
        degrees += 0.025
    end
    if (btn(0)) then
        degrees -= 0.025
    end
    rotate(sun.x,sun.y,30,earth)
end

function _draw()
    cls()
    spr(sun.sprite,sun.x,sun.y,2,2)--sun
    spr(earth.sprite,earth.x,earth.y)
   -- spr(moon.sprite,moon.x,moon.y)
end

function rotate(x, y, radius, planet)
    degrees += 0.025
    --We update the planets position by incrementing the degrees and using our formula
    --x + (radius * cosine(degrees)) = a point on the edge of the circle in the x-axis
    --y + (radius * sine(degrees)) = a point of the edge of the circle in the y-axis
    planet.x = x + (radius * cos(degrees))
    planet.y = y + (radius * sin(degrees))  
  end



