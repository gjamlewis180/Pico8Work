pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

#include alarms.lua
#include colors.lua



function _init()
    alarm0=MakeAlarm(30,Alarm0)
    y=0
end

function _update()
    UpdateAlarms()
    c=flr(rnd(5))
    if (c==0) then
        color(WHITE)
    elseif (c==1 or c==2) then
        color(RED)
    elseif (c==3) then
        color(DARK_BLUE)
    else
        color(PINK)
    end

end

function _draw()
    
end

function Alarm0()

    print("tick")
    StartAlarm(alarm0,30)
end

