pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
#include colors.lua
#include alarms.lua

function _init()
    fill_color = RED 
    x=64
    y=64
    rad=63
    alarm0 = MakeAlarm(60, ChangeColor)
end

function _update()
    UpdateAlarms()
end

function _draw()
    cls(BLACK)
    circ(x,y,rad,WHITE)
    circfill(x,y,rad-1,fill_color)
end

function ChangeColor()
    if (fill_color==RED) then
        fill_color=PURPLE
        StartAlarm(alarm0,30)
    elseif (fill_color==PURPLE) then
        fill_color=BLUE
        StartAlarm(alarm0,90)
    elseif (fill_color==BLUE) then
        fill_color=TAN
        StartAlarm(alarm0,30)
    else
        fill_color=RED
        StartAlarm(alarm0,60)
    end

end
