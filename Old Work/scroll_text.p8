pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

#include alarms.lua

function _init()
    letters={}
    add(letters,"t")
    add(letters,"r")
    add(letters,"e")
    add(letters,"y")
    alarm0=MakeAlarm(10,shift)
end

function _update()
    UpdateAlarms()
end

function _draw()
    cls(0)
    x=0
    cnt=count(letters)
    for i=1,cnt do
        print(letters[i],x,0,7)
        x+=6
    end
    
end

function shift()
    first=letters[1]
    del(letters,letters[1])
    add(letters,first)
    StartAlarm(alarm0,10)
end

