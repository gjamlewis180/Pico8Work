#include 2dEngine.lua
#include buttons.lua

function _init()
    player=MakePlayer(20,20,0,0)
end

function _update60()
    
    if(btn(UP))then
        if (player.speed<5) then
            player.speed+=1
        elseif (player.speed>=5) then
            player.speed=5
        end
    end
    if (btn(DOWN))then
        if (player.speed<=5 and player.speed>-5 ) then
            player.speed-=1
        elseif (player.speed<=-5) then
            player.speed=-5
        end
    end
    
