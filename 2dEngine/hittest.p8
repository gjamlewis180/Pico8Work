pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

#include 2dEngine.lua
#include colors.lua
#include alarms.lua
#include buttons.lua

function _init()
    enemy = NewObject(63,63,1,0,0)
    player = NewObject(23,23,2,0,0)
    cx=63
    cy=20
end

function _update60()
    if(btn(UP))then
        cy-=1
    elseif (btn(DOWN))then
        cy+=1
    end
    if(btn(LEFT))then
        cx-=1
    elseif (btn(RIGHT))then
        cx+=1
    end

    player.x=cx
    player.y=cy
--[[ 
    MoveTowardObject(enemy,player,2)--set the enemys direction
    MoveObject(enemy)
-- for testing recthit and 
    if(RectHit(enemy,player))then
        printh("the objects are in collision")
        enemy.x=0
        enemy.y=0
    else
        printh("the objects not in a collision")
    end ]]

    
end

function _draw()
    cls()
    player.Draw(player)
    enemy.Draw(enemy)
    pset(cx,cy,blue)
end

