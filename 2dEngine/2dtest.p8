pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

#include 2dEngine.lua
#include colors.lua
#include alarms.lua

function _init()
    objects={}

    for i=0,360,10 do
        local o=NewObject(63,63,1,3,i)
        add(objects,o)
    end

    alarm0=MakeAlarm(45,Reset)
end

function _update()
    UpdateAlarms()
    for o in all(objects) do
        MoveObject(o)
    end
end

function _draw()
    cls()
    for o in all(objects) do
        o.Draw(o)
    end
    
end

function Reset()
    for o in all(objects) do
        o.x=63
        o.y=63
    end
    RestartAlarm(alarm0,45)
end

